{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "lodash",
      "jasmine"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules", "./dist", "**/*.d.ts"
  ]
}
